<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.naive.secondkillsaas.Mapper.SkuQuantityMapperExt">
    <!--<parameterMap id="OrderParameterMap" type="team.naive.secondkillsaas.DO.OrderDO">-->
        <!--<parameter property="" resultMap="BaseResultMap" />-->
